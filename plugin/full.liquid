{%- assign emphasis = 1 -%}
<div class="layout layout--row">
  <div class="column gap">
    <div class="value text-stroke text-stroke--medium text--center">{{ villager.name }}</div>
    <img class="image image-dither px--10" src="{{ villager.portraitUrl }}" alt="{{ villager.name }}" />
    {%- if random_tip.tip and trmnl.plugin_settings.custom_fields_values.include_tip_of_the_day == "yes" -%}
    <div class="item item--emphasis-{{ emphasis }}">
      <div class="content">
        <span class="title title--small">{{ random_tip.icon }} Tip of the Day</span>
        <span class="description">{{ random_tip.tip }}</span>
      </div>
    </div>
    {%- endif -%}
  </div>
  <div class="column " data-overflow="true" >
    <div class="item item--emphasis-{{ emphasis }}">
      <div class="meta"></div>
      <div class="content">
        <span class="title title--small">ğŸªª Biography</span>
        <span class="description" data-clamp="5" data-content-limiter="true">{{ villager.biography }}</span>
      </div>
    </div>
    {%- assign emphasis = emphasis | plus: 1 | modulo: 3 | plus: 1 -%}
    <div class="item item--emphasis-{{ emphasis }}">
      <div class="meta"></div>
      <div class="content">
        <span class="title title--small">ğŸ‚ Birthday</span>
        <span class="description" data-clamp="5">{{ villager.birthday }}</span>
      </div>
    </div>
    {%- assign emphasis = emphasis | plus: 1 | modulo: 3 | plus: 1 -%}
    {%- if villager.location -%}
    <div class="item item--emphasis-{{ emphasis }}">
      <div class="meta"></div>
      <div class="content">
        <span class="title title--small">ğŸ“ Location</span>
        <span class="description" data-clamp="5">{{ villager.location }}</span>
      </div>
    </div>
    {%- assign emphasis = emphasis | plus: 1 | modulo: 3 | plus: 1 -%}
    {%- endif -%}
    <div class="item item--emphasis-{{ emphasis }}">
      <div class="meta"></div>
      <div class="content" data-content-limiter="true">
        <span class="title title--small">â¤ï¸ Loves </span>
        <span class="description" data-clamp="3">
          {%- for item in villager.loves -%}
          {{ item }}{%- unless forloop.last -%},&nbsp; {%- endunless -%}
          {%- endfor -%}
        </span>
      </div>
    </div>
    {%- assign emphasis = emphasis | plus: 1 | modulo: 3 | plus: 1 -%}
    <div class="item item--emphasis-{{ emphasis }}">
      <div class="meta"></div>
      <div class="content" data-content-limiter="true">
        <span class="title title--small">ğŸ˜  Hates</span>
        <span class="description" data-clamp="3">
          {%- for item in villager.hates -%}
          {{ item }}{%- unless forloop.last -%},&nbsp; {%- endunless -%}
          {%- endfor -%}
        </span>
      </div>
    </div>
  </div>
</div> 
<div class="title_bar">
  <span class="title">Stardew Valley Villagers</span>
</div>
